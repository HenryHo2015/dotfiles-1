# Set encoding
defutf8 on

# Disable vbell
vbell off

# Disable login
deflogin off

# Dynamic title
shelltitle '$ |bash'

# Caption String
caption always "%{= kR}[ %{G}%H %{r}][ %{=b b}%-w%{=rb db}%>%n %t%{-}%+w%{-b}%< %=%{R}][%{M}%D %M %d %{G}%c%{R}]"
#caption always '%{= kG}[%= %{= kw}%?%-Lw%?%?%+Lw%?%?%= %{g}][%{B} %d/%m %{W}%c %{g}]'
#caption always "%{= kR}[ %{=b b}%-w%{=rb db}%>%n %t%{-}%+w%{-b}%< %=%{R}][%{M}%D %M %d %{G}%c%{R}]"

# Set scrollback
defscrollback 10240

# Startup message
startup_message off

# Set xterm's title
hardstatus off
hardstatus string "screen(@%H): %t"
termcapinfo xterm* 'hs:ts=\E]0;:fs=\007:ds=\E]0;\007'

# Set $TERM variable
term screen-256color

# Set message timeout
msgwait 2

# Set mapping timeout
maptimeout 10

# Automatically detach upon hangup
autodetach on

# Make the xterm scroller work in screen
termcapinfo xterm* ti@:te@

# Refresh the display when exiting programs
altscreen on

# Keyboard binding --------------------
# alt-t: create new window
bindkey "^[t" screen

# alt-d: kill the window
bindkey "^[d" kill

# alt-j next window
bindkey "^[j" next

# alt-k previous window
bindkey "^[k" prev

# alt-q: other window
bindkey "^[q" other

# alt-w: window list
bindkey "^[w" windowlist -b

