# Set $TERM variable
term screen-256color

# repalce prefix to c-o
# escape ^Oo
# alt-o:  Toggle to the window displayed previously
# bindkey "^[o" other 

# tab-bar
hardstatus alwayslastline 

#A very nice one is this one with hostname, centered tabs and redmarked active windows
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d/%m %{W}%c %{g}]'

# Dynamic title
shelltitle '$ |bash'

#scrollback buffer ... Refresh the display when exiting programs, like vi ..
altscreen on

# turns off the flashing visual bel
vbell off       

# Set scrollback
defscrollback 10240

# Make the xterm scroller work in screen
termcapinfo xterm* ti@:te@

# Set mapping timeout. Fix ESC in vim
maptimeout 10

# Keyboard binding --------------------
# alt-t: create new window
bindkey "^[t" screen

# alt-d: kill the window
bindkey "^[d" kill

# alt-j next window
bindkey "^[j" next

# alt-k previous window
bindkey "^[k" prev

# alt-i: window list
bindkey "^[w" windowlist -b

# alt-num: select window
bindkey "^[0" select 0
bindkey "^[1" select 1
bindkey "^[2" select 2
bindkey "^[3" select 3
bindkey "^[4" select 4
bindkey "^[5" select 5
bindkey "^[6" select 6
bindkey "^[7" select 7
bindkey "^[8" select 8
bindkey "^[9" select 9

